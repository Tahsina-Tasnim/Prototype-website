            <grade>Grade 1</grade>
            <searchTags>dice, fun, board game</searchTags>
            <cost>0</cost>
            <equipment>Ludo game board, dice, tokens </equipment>
            <additionalCost>No</additionalCost>
            <reviews>
                <review score="5">Good game to kill time when there is no internet</review>
                <review score="5">Fun way to spend your weekend doing rather than day time drinking</review>
            </reviews>
            <images>
                <image>images/Ludo.jpg</image>
            </images>
            <url>https://ludoking.com/</url>
			<releaseyear score="release-year">1896</releaseyear>
            <developer>Gametion Technologies</developer>
            <genre>Strategy</genre>
            <author>&authorName;</author>
            <source>&university;</source>
    </game>


    </category>


</games>
