<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE games [
    <!ELEMENT games (category+)>
    <!ELEMENT category (name, game+)>
    <!ELEMENT name (#PCDATA)>
    <!ELEMENT game (name, description, subject, grade, searchTags*, cost?, equipment+, additionalCost?, reviews*, images+, url, releaseyear, developer, genre+, author, source)>
    <!ELEMENT description (#PCDATA)>
    <!ELEMENT subject (#PCDATA)>
    <!ELEMENT grade (#PCDATA)>
    <!ELEMENT searchTags (#PCDATA)*>
    <!ELEMENT cost (#PCDATA)>
    <!ELEMENT equipment (#PCDATA)>
    <!ELEMENT additionalCost (#PCDATA)>
    <!ELEMENT reviews (review*)>
    <!ELEMENT review (#PCDATA)>
    <!ATTLIST review score CDATA #REQUIRED>
    <!ELEMENT images (image+)>
    <!ELEMENT image (#PCDATA)>
    <!ELEMENT url (#PCDATA)>
	<!ELEMENT releaseyear (#PCDATA)>
    <!ATTLIST releaseyear score CDATA #REQUIRED>
    <!ELEMENT developer (#PCDATA)>
    <!ELEMENT genre (#PCDATA)>
    <!ELEMENT author (#PCDATA)>
    <!ELEMENT source (#PCDATA)>
    
    <!ENTITY authorName "Jane Doe">
    <!ENTITY university "University of Newcastle">
	
]>
    <games>


    <category>
        <name>Board Games</name>
        <game>
            <name>Jenga</name>
            <description>A British board game consisting of blocks that players stack.</description>
            <subject>Co-ordination Development</subject>
            <grade>grade 3</grade>
            <searchTags>co-ordination, balance</searchTags>
            <cost>$29.99</cost>
            <equipment>Jenga blocks</equipment>
            <additionalCost>No</additionalCost>
            <reviews>
                <review score="5">Greta for family time bonding</review>
                <review score="5">Fun and entertaining for all ages!</review>
            </reviews>
            <images>
                <image>images/Jenga.jpg</image>
            </images>
            <url>https://www.jenga.com</url>
            <releaseyear score="release-year">1983</releaseyear>
            <developer>Hasbro</developer>
            <genre>Strategy</genre>
            <author>&authorName;</author>
            <source>&university;</source>
    </game>


    <game>
            <name>Monopoly</name>
